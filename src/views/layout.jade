doctype 5
html
  head
    title= title
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Droid+Serif:400')
    link(rel='stylesheet', href='#{staticUrl}stylesheets/style.css')
    block config
    script(data-main="#{staticUrl}javascripts/main",src="#{staticUrl}javascripts/vendor/require.js")
    script(src="#{staticUrl}javascripts/config.js")
    //script(src="javascripts/vendor/xrayquire.js")
    - if (typeof dependencies !== 'undefined')
      each include in dependencies
        script(src="#{include}")

  body(class=options.bodyClasses)
    block content
      div.above#example-container
    section#waist
      nav#navigation(class=options.navClasses)
        ul
          li.home
            a(href="./") Toxiclibs.js
          li.examples
            a(href="#") Examples
          - if (typeof name !== 'undefined')
            li.name= name
    block below
      - if (typeof pagelet !== 'undefined' )
        section.below#pagelet !{pagelet}
    include _footer.jade
